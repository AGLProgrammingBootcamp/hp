<p id="notice"><%= notice %></p>

<h1>Listing Money</h1>

<table>
  <thead>
    <tr>
      <th>Registered</th>
      <th>Income</th>
      <th>Outcome</th>
      <th>Total</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @money.each do |money| %>
      <tr>
        <td><%= money.registered %></td>
        <td><%= money.income %>円</td>
        <td><%= money.outcome %>円</td>
        <td><%= money.total %>円</td>
        <td><%= link_to 'Show', money %></td>
        <td><%= link_to 'Edit', edit_money_path(money) %></td>
        <td><%= link_to 'Destroy', money, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

